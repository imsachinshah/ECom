<div class="container">
  <h2>Your Cart</h2>

  <% if @cart.products.any? %>
    <div class="row">
      <% @cart.products.each do |product| %>
        <div class="col-md-3">
          <div class="card">
            <%= image_tag product.image, class: 'card-img-top' %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description.truncate(50) %></p>
              <p><strong>Rating:</strong> <%= product.rating %> (based on <%= product.rating_count %> ratings)</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>

  <%= link_to 'Back to Products', products_path, class: 'btn btn-primary mt-3' %>
</div>
